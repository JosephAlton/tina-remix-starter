    "tinacms": "^2.9.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.17.1",
    "@tinacms/cli": "^1.11.0",
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
